<PageHeader>
    <PageHeaderContent>
        <AuthorizeView>
            @if (context.User.GetCurrentLab() is { } currentLab)
            {
                @ChildContent?.Invoke(currentLab)
            }
        </AuthorizeView>
    </PageHeaderContent>
    @if (TabsContent is not null)
    {
        <ul class="nav nav-tabs" style="margin-left: -1px; margin-bottom: -1px;">@TabsContent</ul>
    }
</PageHeader>

@code {

    [Parameter]
    public RenderFragment<CurrentLabDto>? ChildContent { get; set; }

    [Parameter]
    public RenderFragment? TabsContent { get; set; }
}