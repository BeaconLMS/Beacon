@page "/invitations/{InviteId:guid}/accept"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@layout EmptyLayout

@code {

    [Inject]
    private AuthenticationStateProvider AuthStateProvider { get; set; } = null!;

    [Parameter] 
    public Guid InviteId { get; set; }

    [Parameter, SupplyParameterFromQuery(Name = "emailId")]
    public Guid EmailId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();

        if (authState.User.Identity is not { IsAuthenticated: true })
        {
            var redirectUri = $"invitations/{InviteId}/accept?emailId={EmailId}";
            NavigationManager.NavigateToLogin($"login?redirectUri={redirectUri}");
            return;
        }

        var response = await ApiClient.AcceptEmailInvitation(InviteId, EmailId);

        if (!response.IsError)
            NavigationManager.NavigateTo("");
    }
}
