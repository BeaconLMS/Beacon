@page "/"
@attribute [Authorize]

<div class="d-flex flex-column flex-grow-1" style="overflow-x: auto;">
    <div class="content flex-grow-1" style="background-color: #f8fafc">
        <div class="px-4 h-100">
            <div class="flex">
                <h3 class="flex-grow-1">My Laboratories</h3>
                <button type="button" class="btn btn-link" @onclick="ShowCreateLabModal">New lab</button>
            </div>

            <MyLaboratoriesTable />
        </div>
    </div>
</div>

@code {

    [CascadingParameter]
    private IModalService ModalService { get; set; } = null!;

    private async Task ShowCreateLabModal()
    {
        await ModalService.Show<CreateLaboratoryModal>("Create New Lab").Result;
    }
}