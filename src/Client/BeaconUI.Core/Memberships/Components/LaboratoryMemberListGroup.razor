@if (Members != null)
{
    foreach (var member in Members)
    {
        @ChildContent?.Invoke(member)
    }
}

@code {

    [Parameter]
    public RenderFragment<LaboratoryMemberDto>? ChildContent { get; set; }

    [Parameter]
    public Func<LaboratoryMemberDto, bool> Filter { get; set; } = m => true;

    private LaboratoryMemberDto[]? Members { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        var response = await ApiClient.GetLaboratoryMembers();

        Members = response.Match(
            m => m.Where(Filter).ToArray(),
            error => Array.Empty<LaboratoryMemberDto>()
        );
    }
}
