<button type="button" disabled="@IsDisabled" @onclick="ShowModal" @attributes="@Attributes">
    <span class="icon text-primary">
        <i class="fa-regular fa-pencil"></i>
    </span>
    <span>Manage Permissions</span>
</button>

@code {

    [Parameter]
    public IDictionary<string, object?>? Attributes { get; set; }

    [Parameter, EditorRequired]
    public required LaboratoryMemberDto Member { get; set; }

    [CascadingParameter]
    private MembershipContext Context { get; set; } = default!;

    private bool IsDisabled => !Context.CanManagePermissions(Member);
    private Task ShowModal() => Context.ShowManagePermissionsModal(Member);
}