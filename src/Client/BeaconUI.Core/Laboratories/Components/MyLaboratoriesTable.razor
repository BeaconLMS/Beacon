@if (Laboratories is null)
{
    <p>Loading...</p>
}
else
{
    <div class="table-responsive">
        <table class="table border border-1">
            <thead class="table-light small">
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th># Members</th>
                </tr>
            </thead>
            <tbody class="small">
                @foreach (var lab in Laboratories)
                {
                    <tr>
                        <td></td>
                        <td>
                            <a class="text-decoration-none" href="@($"laboratories/{lab.Id}")">
                                <AvatarSquare Name="@lab.Name" />
                                <span class="nav-text">@lab.Name</span>
                            </a>
                        </td>
                        <td>
                            @lab.MemberCount
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {

    [Parameter, EditorRequired]
    public required LaboratoryDto[]? Laboratories { get; set; }
}