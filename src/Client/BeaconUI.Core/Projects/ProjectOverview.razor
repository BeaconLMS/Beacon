<div class="row">
    <div class="col-12 col-lg">
        <CreateProjectEventButton ProjectId="Project.Id" OnEventCreated="LoadEvents" />
    </div>
    <div class="col-12 col-lg-auto" style="min-width: 21rem;">
        @if (Events is { Value: { Length: > 0 } } events)
        {
            var timelineItems = events.Value
                .Select(e => new TimelineItem<ProjectEventDto> { Timestamp = e.ScheduledStart.DateTime, Value = e });

            <div class="mb-3">
                <Timeline TimelineItems="timelineItems">
                    <div style="margin-bottom:0.625rem;">
                        <p class="text-muted mb-0 d-flex align-items-center" style="font-size: 0.75rem; gap: 0.2rem;">
                            <div>@context.Timestamp.ToString("dd-MMM-yyyy")</div>
                            @if (context.Value.IsOngoingOn(DateTime.UtcNow))
                            {
                                <div class="d-flex">
                                    <Badge Class="is-primary">Ongoing</Badge>
                                </div>
                            }
                        </p>
                        <a href="#" class="d-block" style="font-size: 0.9rem; text-decoration: none;">@context.Value.Title</a>
                    </div>
                </Timeline>
            </div>
            
        }
        <LeadAnalystCard Project="Project" ProjectChanged="ProjectChanged" />
    </div>
</div>
