@using System.Reflection

<CascadingAuthenticationState>
    <Router AppAssembly="@Assembly" AdditionalAssemblies="new[] { typeof(BeaconApp).Assembly }">
        <Found Context="routeData">
            <RouteView RouteData="@routeData" DefaultLayout="@typeof(AuthorizedLayout)" />
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(AuthorizedLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    [Parameter, EditorRequired] public required Assembly Assembly { get; set; }
}