<SessionInfo Context="session">
    <header class="d-flex border-bottom align-items-center px-4 py-3" style="min-height: 4.5rem;">
        @TitleContent?.Invoke(session)
        <div>
            @ButtonsContent?.Invoke(session)
        </div>
    </header>
</SessionInfo>

@code {

    [Parameter]
    public RenderFragment<SessionInfoDto>? TitleContent { get; set; }

    [Parameter]
    public RenderFragment<SessionInfoDto>? ButtonsContent { get; set; }
}