<header class="border-bottom" style="min-height: 4.5rem;">
    <div class="d-flex align-items-center px-4 py-3">
        <div class="flex-grow-1">
            @TitleContent
        </div>
        @if (ButtonsContent is not null)
        {
            @ButtonsContent
        }
    </div>
    @if (TabsContent is not null)
    {
        <ul class="nav nav-tabs" style="margin-left: -1px; margin-bottom: -1px;">@TabsContent</ul>
    }
</header>

@code {

    [Parameter, EditorRequired]
    public required RenderFragment TitleContent { get; set; }

    [Parameter]
    public RenderFragment? ButtonsContent { get; set; }

    [Parameter]
    public RenderFragment? TabsContent { get; set; }
}